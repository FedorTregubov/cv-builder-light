{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
    ],
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
  }
}
